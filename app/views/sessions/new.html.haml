-provide(:title, "Sign in")
.span6.well
	%h1 Sign in
	.row
		=form_for(:session, url: sessions_path, html: {class: "sign-in-page-form"}) do |f|
			=f.text_field :email, placeholder: "Email", class: "sign-up-field"
			=f.password_field :password, placeholder: "Password", class: "sign-up-field"
			=f.submit "Sign in", class: "btn btn-large btn-primary", style: "width: 310px;"
			%p= link_to "Forgot password?", new_password_reset_path
		%p.sign-in-page-form New user? #{link_to "Sign up now!", signup_path}
		