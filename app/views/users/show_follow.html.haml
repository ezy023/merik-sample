- provide(:title, @title)
.row
	.span4
		%section
			=link_to image_tag(@user.image.url(:thumb)), user_path(@user)
			%h1{style: "clear:right;"}= @user.name
			%br/
			.statistics{style: "padding-bottom: 1em;"}= render 'shared/stats'
		%section
			-if @users.any?
				.user_avatars
					=@users.each do |user|
						=link_to image_tag(user.image.url(:mini)), user
	.span8
		%h3= @title
		- if @users.any?
			%ul.users
				= render @users
			= will_paginate
