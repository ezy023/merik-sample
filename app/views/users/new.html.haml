- provide(:title, 'Sign up')
.span6.well
	%h1 Sign up
	%h6 Already have an account? #{link_to "Sign In", signin_path}
	=form_for(@user, html: {class: "sign-up-form"}) do |f|
		=render 'shared/error_messages', object: f.object
		=f.text_field :name, placeholder: "Name", class: "sign-up-field"
		=f.text_field :email, placeholder: "Email", class: "sign-up-field"
		=f.text_field :username, placeholder: "Username", class: "sign-up-field"
		=f.password_field :password, placeholder: "Password", class: "sign-up-field"
		=f.password_field :password_confirmation, placeholder: "Confirm Password", class: "sign-up-field"
		%br/
		%span #{f.check_box :terms} I agree to the #{link_to "Terms fo Use", terms_path, target: "_blank"}
		%br/
		=f.submit "Create my account", class: "btn btn-large btn-primary", id: "sign-up-submit"
