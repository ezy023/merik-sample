<h1>Listing reposts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Micropost</th>
    <th>Micropost</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reposts.each do |repost| %>
  <tr>
    <td><%= repost.content %></td>
    <td><%= repost.user_id %></td>
    <td><%= repost.micropost_id %></td>
    <td><%= repost.micropost_id %></td>
    <td><%= repost.created_at %></td>
    <td><%= link_to 'Show', repost %></td>
    <td><%= link_to 'Edit', edit_repost_path(repost) %></td>
    <td><%= link_to 'Destroy', repost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

