<% if @feed_items.any? %>
	<ul class="playlist">
	
		<%= render partial: 'shared/feed_item', collection: @feed_items %>
	
	</ul>
		<% will_paginate @feed_items %>
<% else %>
	<div class="empty-feed">
		<h4>There is nothing here yet.</h4>
		<h5>Start by Following some people</h5>
		<h6>Or</h6>
		<h5>Search for music above, and Post your own songs on the left</h5>
		<div id="suggested-users-well">
			<div class="well">
				<h6>Here are a few awesome people</h6>
				<ul class="users">
					<%= render 'users/suggested' %>
				</ul>
			<div>
			<h6>You can find more people to follow by clicking '<%= link_to "People", users_path %>' above.</h6>
		</div>	
	</div>
<% end %>