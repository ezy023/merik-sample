<% if signed_in? %>
<div id="user_bar">
	<p>Welcome <%= current_user.name %> (<%= link_to 'Sign out', signout_path, method: "delete" %>)</p>
	<% if current_user.invitation_limit > 0 %>
		<p>
			<%= link_to 'Send invitation', new_invitation_path %>
			(<%= current_user.invitation_limit %> left)
		</p>
	<% end %>
<% else %>
	<p>If you have an account, <%= link_to "Sign in", signin_path %></p>
</div>
<% end %>