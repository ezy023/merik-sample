<a href="<%= user_path(current_user) %>">
  <%= image_tag current_user.image_url(:thumb).to_s %>
</a>
<h1>
  	<% if current_user.username? %>
		<%= current_user.username %>
	<% else %>
		<%= current_user.name %>
	<% end %>
</h1>
<div class="statistics">
	<%= render 'shared/stats' %>
</div>
		<% if current_user.summary? %>
			<section class="profile-summary" style="margin-top:2em;">
				<%= current_user.summary %>
			</section>
		<% else %>
			<section class="profile-summary" style="margin-top:2em;">
				<p>(Update your summary in 'Settings')</p>
			</section>
		<% end %>