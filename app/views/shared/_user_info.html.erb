<a href="<%= user_path(current_user) %>">
       <a href="<%= user_path(current_user) %>">
        <%= image_tag current_user.image.url(:thumb) %>
      </a>
      <div class="statistics" style="padding-bottom: 1em;">
            <%= render 'shared/stats' %>
      </div>
      <h1 style="clear:right;"><%= current_user.name %></h1>
		<% if current_user.summary? %>
			<section class="profile-summary" style="margin-top:2em;">
				<%= current_user.summary %>
			</section>
		<% else %>
			<section class="profile-summary" style="margin-top:2em;">
				<p>(Update your summary in 'Settings')</p>
			</section>
		<% end %>