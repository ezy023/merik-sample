<%= form_tag(soundcloud_path) do %>
<%= text_field_tag :sc_link %>
<%= submit_tag "Post Song" %>
<% end %>

<h3 id="song-form-title">Upload a Song!</h3>
<%= form_for @micropost, :html => {:multipart => true, class: ""} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div>
  	<%= f.label :song, class: "control-label" %>
  	<div> 
  	<%= f.file_field :song %>
  	</div>
  </div>
  <div>
  	<%= f.label :title, class: "control-label" %>
  	<div>
    <%= f.text_field :title, placeholder: "Song Title" %>
    </div>
  </div>
  <div>
  	<%= f.label :artist, class: "control-label" %>
  	<div>
    <%= f.text_field :artist, placeholder: "Artist" %>
    </div>
  </div>
  <div>
  	<%= f.label :genre, class: "control-label" %>
  	<div>
    <%= f.text_field :genre, placeholder: "Genre" %>
    </div>
  </div>
  <div>
    <div style="display:inline;">
    <label class="control-label">Hashtag  <i id="what-is-hashtag" class="icon-question-sign"></i></label>
    <div>
    <div>
    <%= f.text_field :hashtag, placeholder: "#" %>
    </div>
  </div>
  <%= f.submit "Upload", class: "btn btn-large btn-success" %>
<% end %>