<li id="<%= feed_item.id %>" class="<%= feed_item.genre %>">
	<a href="<%= feed_item.song_url.to_s %>" class="song-link"><%= feed_item.title %><i class="icon-play" style="margin-left: .5em;"></i></a>
	<div class="song">
		<% if feed_item.hashtag? %>
			<span class="pull-right hashtag btn btn-mini btn-comment"># <%= link_to feed_item.hashtag, feed_item, class: "hash-link", style: "color: #ffffff", target: "_blank" %></span>
		<% end %>
	</div>	
	<div class="artist">Artist: <%= feed_item.artist %></div>
	<div class="artist"><%= feed_item.genre %></div>
	<%= link_to image_tag(feed_item.user.image.url(:mini)), feed_item.user, class: "user-prof-pic", target: "_blank" %>

	

	<div class="timestamp">
		<%= feed_item.user.username %> posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</div>

	<% if feed_item.retweeters.count > 0 %>
		<strong><%= pluralize(feed_item.retweeters.count, "Repost") %></strong>
	<% end %>

	<% if @user.retweeting?(feed_item) %>
		<div class="reposters">
			<span>By: </span>
			<% feed_item.retweeters.first(5).each do |user| %>
			<%= link_to "#{user.username} ", user, class: "repost-link" %>
			<% end %>
		</div>
		<%= render partial: 'shared/icon_retweet',  :locals => { object: feed_item } %>
	<% end %>

	<%= render partial: 'shared/retweetings_post_item',  :locals => { object: feed_item }  %> 	

	<% if current_user?(feed_item.user) %>
    	<%= render partial: 'shared/delete_links', :locals => { object: feed_item } %>
 	<% end %>
  
	<% if feed_item.available? %>
	  	<a href="#" class="btn dl-mini"><i class="icon-download"></i></a>
	<% end %>

</li>