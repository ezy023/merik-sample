<% @user = current_user %>
<div class="span6">
	<ul class="playlist">
		<li id="<%= @micropost.id %>" class="<%= @micropost.genre %>">
			<a href="<%= @micropost.song_url.to_s %>" class="song-link"><%= @micropost.title %><i class="icon-play" style="margin-left: .5em;"></i></a>
			<div class="artist">Artist: <%= @micropost.artist %></div>
			<div class="artist"><%= @micropost.genre %></div>
			<%= link_to image_tag(@micropost.user.image.url(:mini)), @micropost.user, style: "padding-top: 1.5em;" %>
			
			<% if @micropost.retweeters.count > 0 %>
				<strong><%= pluralize(@micropost.retweeters.count, "Repost") %></strong>
			<% end %>

			<div class="timestamp">
				<%= @micropost.user.username %> posted <%= time_ago_in_words(@micropost.created_at) %> ago.
			</div>

			<% if signed_in? %>
				<% if current_user.retweeting?(@micropost) %>
						<%= render partial: 'shared/icon_retweet', :locals => { object: @micropost } %>
				<% end %>
				

				<% if current_user?(@micropost.user) %>
			    	<%= render partial: 'shared/delete_links', :locals => { object: @micropost } %>
			  	<% end %>
			  	<%= render partial: 'shared/retweetings_post_item',  :locals => { object: @micropost }  %> 		

		  	<% end %>
		  	
		</li>
	</ul>
	<% if @micropost.hashtag? %>
	<script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
		<div class="center" style="padding-bottom: .25em;">
			<%= link_to "Comment", "http://twitter.com/intent/tweet?hashtags=#{@micropost.hashtag}&url=http%3A%2F%2Fwww.muserik.com%2Fmicroposts%2F#{@micropost.id}", class: "btn btn-primary btn-large" %>
		</div>
		<h6 class="well well-small comment-header"><%= link_to "Comment", "http://twitter.com/intent/tweet?hashtags=#{@micropost.hashtag}&url=http%3A%2F%2Fwww.muserik.com%2Fmicroposts%2F#{@micropost.id}" %> by sending a tweet using the hashtags "#<%= @micropost.hashtag %>".</h6>
			<div class="span6">
		<% Twitter.search("##{@micropost.hashtag} -rt", :count => 30, :result_type => "recent").results.map do |tweet| %>
							<div class="well well-small"><strong><%= "@#{tweet.from_user}" %></strong><%= ": #{tweet.text}" %></div>
						<% end %>
			</div>	
	<% end %>
</div>