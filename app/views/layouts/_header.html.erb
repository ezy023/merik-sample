<header class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "muserik", root_path, id: "logo", class: "pull-left brand" %>

        <ul class="nav pull-left">
        <li><%= link_to "Home", root_path, class: "pull-right" %></li>

          		
          <% if signed_in? %>
            <li><%= link_to "People", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
          <li class="divider-vertical"></li>
          <% if signed_in? %>
          <li id="search-popover">
          <%= form_tag microposts_path, method: 'get', class: "navbar-search" do %>
                
                  <%= text_field_tag :search, params[:search], placeholder: "Title, Artist, or Genre", class: "input-medium search-query" %>
                
                <% end %>
          </li>
          <% end %>
          <li class="divider-vertical"></li>
        </ul>
    </div>
  </div>
</header>