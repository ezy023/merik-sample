<h2>Sent</h2>
<table>
	<tr>
		<th>Del?</th>
		<th>Subject</th>
		<th>To</th>
		<th>Sent</th>
	</tr>
	<% if @private_messages.size == 0 %>
		<tr>
			<td colspan="4">
				No messages
			</td>
		</tr>
	<% else %>
		<% for private_message in @private_messages %>
			<tr>
				<td><%= check_box_tag "delete[]", private_message.id %></td>
				<td><%= link_to h(private_message.subject), user_private_message_path(@user, private_message) %></td>
  			<td><%= link_to h(private_message.recipient.username), user_path(private_message.recipient) %></td>
			  <td><%=h private_message.created_at.to_s(:long) %></td>
			</tr>
		<% end %>
		<tr>
			<td colspan="4">
				<%= submit_tag "Delete" %>
			</td>
		</tr>
 	<% end %>
</table>
<%= link_to "Inbox", user_private_messages_path(@user)%>
